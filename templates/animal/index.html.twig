{% extends 'base.html.twig' %}

{% block title %}Hello AnimalController!{% endblock %}

{% block body %}
    {% for animal in animals %}
        <div>
            <h2>{{ animal.nom }}</h2>
            <h3>{{ animal.type }}</h3>
            <div class="content">
                <img src="{{ animal.photo }}" alt="animal">
                <p>{{ animal.description }}</p>
                <a href="{{ path('animal_show', {'id': animal.id}) }}">Lire la suite</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
